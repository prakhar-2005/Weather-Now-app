<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:ignore="ScrollViewCount">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activities.MainActivity2">

            <LinearLayout
                android:id="@+id/barlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchcity"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="@string/searchtext"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:drawablePadding="20dp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="#77FFFFFF"
                    android:backgroundTint="@color/black"
                    android:layout_margin="10dp">
                    <!-- android:background="" -->
                </EditText>

                <ImageView
                    android:id="@+id/currentlocation"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_my_location_24"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Current location">
                    <!-- android:background="" -->

                </ImageView>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barlayout"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:layout_gravity="center">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/mintemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min temp"
                            android:textColor="@color/white"
                            android:layout_marginEnd="25dp">

                        </TextView>

                        <TextView
                            android:id="@+id/maxtemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max temp"
                            android:textColor="@color/white"
                            android:layout_marginStart="25dp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:gravity="center"
                            android:layout_marginStart="25dp">

                            <TextView
                                android:id="@+id/temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="80sp"
                                android:textColor="@color/white">

                            </TextView>

                            <TextView
                                android:id="@+id/feelslike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Feels like"
                                android:layout_margin="5dp"
                                android:textColor="@color/white">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:orientation="vertical"
                            android:layout_marginEnd="25dp"
                            android:gravity="center"
                            android:layout_marginStart="30dp">

                            <ImageView
                                android:id="@+id/weatherimg"
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_launcher_foreground"
                                android:scaleType="fitXY">

                            </ImageView>

                            <TextView
                                android:id="@+id/weathertitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weather"
                                android:layout_margin="5dp"
                                android:textColor="@color/white">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:id="@+id/horizontalview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:background="#33000000">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="15dp"
                            android:weightSum="7">

                            <LinearLayout
                                android:id="@+id/sunriselayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp"
                                android:background="@drawable/horizontalscrollview_bg">

                                <ImageView
                                    android:id="@+id/sunrise"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/sunrise"
                                    android:tint="@color/white">

                                </ImageView>

                                <TextView
                                    android:id="@+id/sunrisetext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="20dp"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="15sp">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:text="Sunrise"
                                    android:textColor="#BAFFFFFF">

                                </TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sunsetlayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="@drawable/horizontalscrollview_bg"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp">

                                <ImageView
                                    android:id="@+id/sunset"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/sunset"
                                    android:tint="@color/white">

                                </ImageView>

                                <TextView
                                    android:id="@+id/sunsettext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="20dp"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="15sp">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:text="Sunset"
                                    android:textColor="#BAFFFFFF">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sealevellayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="@drawable/horizontalscrollview_bg"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp">

                                <ImageView
                                    android:id="@+id/sealevel"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/pressure"
                                    android:tint="@color/white">

                                </ImageView>

                                <TextView
                                    android:id="@+id/sealeveltext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="20dp"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="15sp">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:text="Sea level"
                                    android:textColor="#BAFFFFFF">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/groundlevellayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="@drawable/horizontalscrollview_bg"
                                android:paddingStart="20dp"
                                android:paddingEnd="20dp">

                                <ImageView
                                    android:id="@+id/groundlevel"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ground_level"
                                    android:tint="@color/white">

                                </ImageView>

                                <TextView
                                    android:id="@+id/groundleveltext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="20dp"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="15sp">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:text="Ground level"
                                    android:textColor="#BAFFFFFF">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cloudinesslayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="@drawable/horizontalscrollview_bg"
                                android:paddingStart="25dp"
                                android:paddingEnd="25dp">

                                <ImageView
                                    android:id="@+id/cloudiness"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/pressure"
                                    android:tint="@color/white">

                                </ImageView>

                                <TextView
                                    android:id="@+id/cloudinesstext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="20dp"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="15sp">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:text="Cloudiness"
                                    android:textColor="#BAFFFFFF">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/gustlayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="@drawable/horizontalscrollview_bg"
                                android:paddingStart="30dp"
                                android:paddingEnd="30dp">

                                <ImageView
                                    android:id="@+id/gust"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/pressure"
                                    android:tint="@color/white">

                                </ImageView>

                                <TextView
                                    android:id="@+id/gusttext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="20dp"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="15sp">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:text="Gust"
                                    android:textColor="#BAFFFFFF">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/winddirectionlayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="@drawable/horizontalscrollview_bg"
                                android:paddingStart="15dp"
                                android:paddingEnd="15dp">

                                <ImageView
                                    android:id="@+id/winddirection"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/pressure"
                                    android:tint="@color/white">

                                </ImageView>

                                <TextView
                                    android:id="@+id/winddirectiontext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:paddingTop="20dp"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="15sp">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:gravity="center_horizontal"
                                    android:text="Wind direction"
                                    android:textColor="#BAFFFFFF">

                                </TextView>

                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="40dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="#26000000"
                            android:layout_margin="25dp"
                            app:cardCornerRadius="25dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/dailyforecastlayout">

                            <LinearLayout
                                android:id="@+id/optionslayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:id="@+id/pressurelayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <ImageView
                                            android:id="@+id/pressure"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="2dp"
                                            android:src="@drawable/pressure"
                                            android:tint="@color/white">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/pressuretext"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="25sp"
                                            android:textStyle="bold">

                                        </TextView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="Pressure"
                                            android:textColor="#BAFFFFFF">

                                        </TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/humiditylayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <ImageView
                                            android:id="@+id/humidity"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="2dp"
                                            android:src="@drawable/humidity"
                                            android:tint="@color/white">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/humiditytext"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="25sp"
                                            android:textStyle="bold">

                                        </TextView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="Humidity"
                                            android:textColor="#BAFFFFFF">

                                        </TextView>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:id="@+id/tempinflayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <ImageView
                                            android:id="@+id/tempinf"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="2dp"
                                            android:src="@drawable/temperature"
                                            android:tint="@color/white">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/tempinftext"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="25sp"
                                            android:textStyle="bold">

                                        </TextView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="Temperature"
                                            android:textColor="#BAFFFFFF">

                                        </TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/windlayout"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="15dp">

                                        <ImageView
                                            android:id="@+id/wind"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_margin="2dp"
                                            android:src="@drawable/wind"
                                            android:tint="@color/white">

                                        </ImageView>

                                        <TextView
                                            android:id="@+id/windtext"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="-"
                                            android:textColor="@color/white"
                                            android:textSize="25sp"
                                            android:textStyle="bold">

                                        </TextView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:text="Wind"
                                            android:textColor="#BAFFFFFF">

                                        </TextView>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </FrameLayout>

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone">

            </ProgressBar>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
