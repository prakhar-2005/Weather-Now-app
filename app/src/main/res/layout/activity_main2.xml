<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewCount">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".activities.MainActivity2">

                <LinearLayout
                    android:id="@+id/barlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/searchcity"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="#26FFFFFF"
                        android:backgroundTint="@color/black"
                        android:drawableStart="@drawable/baseline_search_24"
                        android:drawablePadding="10dp"
                        android:hint="@string/searchtext"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingStart="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="#77FFFFFF">

                    </EditText>

                    <ImageView
                        android:id="@+id/currentlocation"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="10dp"
                        android:clickable="true"
                        android:contentDescription="@string/current_location"
                        android:focusable="true"
                        android:src="@drawable/baseline_my_location_24">

                    </ImageView>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/barlayout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Time"
                            android:textColor="@color/white"
                            android:textSize="15sp">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/mintemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="25dp"
                                android:text="Min temp"
                                android:textColor="@color/white">

                            </TextView>

                            <TextView
                                android:id="@+id/maxtemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:text="Max temp"
                                android:textColor="@color/white">

                            </TextView>

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/aqibutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#26FFFFFF"
                            android:gravity="center"
                            android:text="AQI: -"
                            android:textColor="@color/white"
                            android:textSize="15sp">

                        </com.google.android.material.button.MaterialButton>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="10dp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/temp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/white"
                                    android:textSize="75sp">

                                </TextView>

                                <TextView
                                    android:id="@+id/feelslike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="Feels like"
                                    android:textColor="@color/white">

                                </TextView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="25dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/weatherimg"
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_launcher_foreground">

                                </ImageView>

                                <TextView
                                    android:id="@+id/weathertitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="Weather"
                                    android:textColor="@color/white">

                                </TextView>

                            </LinearLayout>

                        </LinearLayout>

                        <HorizontalScrollView
                            android:id="@+id/horizontalview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="25dp"
                            android:background="#33000000">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="15dp"
                                android:weightSum="7">

                                <LinearLayout
                                    android:id="@+id/sunriselayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/horizontalscrollview_bg"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="30dp">

                                    <ImageView
                                        android:id="@+id/sunrise"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_margin="2dp"
                                        android:src="@drawable/sunrise"
                                        android:tint="@color/white">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/sunrisetext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="20dp"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="15sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:text="Sunrise"
                                        android:textColor="#BAFFFFFF">

                                    </TextView>


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/sunsetlayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/horizontalscrollview_bg"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="30dp">

                                    <ImageView
                                        android:id="@+id/sunset"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_margin="2dp"
                                        android:src="@drawable/sunset"
                                        android:tint="@color/white">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/sunsettext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="20dp"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="15sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:text="Sunset"
                                        android:textColor="#BAFFFFFF">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/winddirectionlayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/horizontalscrollview_bg"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:paddingStart="15dp"
                                    android:paddingEnd="15dp">

                                    <ImageView
                                        android:id="@+id/winddirection"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_margin="2dp"
                                        android:src="@drawable/wind_direction"
                                        android:tint="@color/white">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/winddirectiontext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="20dp"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="15sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:text="Wind direction"
                                        android:textColor="#BAFFFFFF">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/sealevellayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/horizontalscrollview_bg"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp">

                                    <ImageView
                                        android:id="@+id/sealevel"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_margin="2dp"
                                        android:src="@drawable/sea_level"
                                        android:tint="@color/white">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/sealeveltext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="20dp"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="15sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:text="Sea level"
                                        android:textColor="#BAFFFFFF">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/groundlevellayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/horizontalscrollview_bg"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:paddingStart="20dp"
                                    android:paddingEnd="20dp">

                                    <ImageView
                                        android:id="@+id/groundlevel"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_margin="2dp"
                                        android:src="@drawable/ground_level"
                                        android:tint="@color/white">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/groundleveltext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="20dp"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="15sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:text="Ground level"
                                        android:textColor="#BAFFFFFF">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/cloudinesslayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/horizontalscrollview_bg"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:paddingStart="25dp"
                                    android:paddingEnd="25dp">

                                    <ImageView
                                        android:id="@+id/cloudiness"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_margin="2dp"
                                        android:src="@drawable/cloud"
                                        android:tint="@color/white">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/cloudinesstext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="20dp"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="15sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:text="Cloudiness"
                                        android:textColor="#BAFFFFFF">

                                    </TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/gustlayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/horizontalscrollview_bg"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:paddingStart="30dp"
                                    android:paddingEnd="30dp">

                                    <ImageView
                                        android:id="@+id/gust"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_margin="2dp"
                                        android:src="@drawable/gust"
                                        android:tint="@color/white">

                                    </ImageView>

                                    <TextView
                                        android:id="@+id/gusttext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:paddingTop="20dp"
                                        android:text="-"
                                        android:textColor="@color/white"
                                        android:textSize="15sp">

                                    </TextView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="1dp"
                                        android:gravity="center_horizontal"
                                        android:text="Gust"
                                        android:textColor="#BAFFFFFF">

                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>

                        </HorizontalScrollView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="40dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="25dp"
                                android:foreground="#26000000"
                                app:cardCornerRadius="25dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/dailyforecastlayout">

                                <LinearLayout
                                    android:id="@+id/optionslayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:weightSum="2">

                                        <LinearLayout
                                            android:id="@+id/pressurelayout"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            android:padding="15dp">

                                            <ImageView
                                                android:id="@+id/pressure"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_margin="2dp"
                                                android:src="@drawable/pressure"
                                                android:tint="@color/white">

                                            </ImageView>

                                            <TextView
                                                android:id="@+id/pressuretext"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="-"
                                                android:textColor="@color/white"
                                                android:textSize="25sp"
                                                android:textStyle="bold">

                                            </TextView>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="Pressure"
                                                android:textColor="#BAFFFFFF">

                                            </TextView>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/humiditylayout"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            android:padding="15dp">

                                            <ImageView
                                                android:id="@+id/humidity"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_margin="2dp"
                                                android:src="@drawable/humidity"
                                                android:tint="@color/white">

                                            </ImageView>

                                            <TextView
                                                android:id="@+id/humiditytext"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="-"
                                                android:textColor="@color/white"
                                                android:textSize="25sp"
                                                android:textStyle="bold">

                                            </TextView>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="Humidity"
                                                android:textColor="#BAFFFFFF">

                                            </TextView>

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:weightSum="2">

                                        <LinearLayout
                                            android:id="@+id/tempinflayout"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            android:padding="15dp">

                                            <ImageView
                                                android:id="@+id/tempinf"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_margin="2dp"
                                                android:src="@drawable/temperature"
                                                android:tint="@color/white">

                                            </ImageView>

                                            <TextView
                                                android:id="@+id/tempinftext"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="-"
                                                android:textColor="@color/white"
                                                android:textSize="25sp"
                                                android:textStyle="bold">

                                            </TextView>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="Temperature"
                                                android:textColor="#BAFFFFFF">

                                            </TextView>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/windlayout"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            android:padding="15dp">

                                            <ImageView
                                                android:id="@+id/wind"
                                                android:layout_width="50dp"
                                                android:layout_height="50dp"
                                                android:layout_margin="2dp"
                                                android:src="@drawable/wind"
                                                android:tint="@color/white">

                                            </ImageView>

                                            <TextView
                                                android:id="@+id/windtext"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="-"
                                                android:textColor="@color/white"
                                                android:textSize="25sp"
                                                android:textStyle="bold">

                                            </TextView>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_margin="1dp"
                                                android:text="Wind"
                                                android:textColor="#BAFFFFFF">

                                            </TextView>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/latitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="25dp"
                                android:text="latitude"
                                android:textColor="#BAFFFFFF">

                            </TextView>

                            <TextView
                                android:id="@+id/longitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="longitude"
                                android:textColor="#BAFFFFFF">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
